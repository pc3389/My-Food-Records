<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/movie_poster_iv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/movie_poster_iv"
        android:paddingVertical="20dp">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.36" />

        <TextView
            style="@style/DetailMediumText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Movie Title:"
            app:layout_constraintBottom_toBottomOf="@id/movie_title_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/movie_title_tv" />

        <TextView
            android:id="@+id/movie_title_tv"
            style="@style/DetailMediumText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/guide30"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Title" />

        <TextView
            style="@style/DetailMediumText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Release Date:"
            app:layout_constraintBottom_toBottomOf="@id/movie_date_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/movie_date_tv" />

        <TextView
            android:id="@+id/movie_date_tv"
            style="@style/DetailMediumText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/guide30"
            app:layout_constraintTop_toBottomOf="@id/movie_title_tv"
            tools:text="2019/2/1" />

        <TextView
            style="@style/DetailMediumText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating:"
            app:layout_constraintBottom_toBottomOf="@id/movie_rating_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/movie_rating_tv" />

        <TextView
            android:id="@+id/movie_rating_tv"
            style="@style/DetailMediumText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/guide30"
            app:layout_constraintTop_toBottomOf="@id/movie_date_tv"
            tools:text="5" />

        <TextView
            android:id="@+id/movie_overview_tv"
            style="@style/DetailMediumText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingVertical="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/movie_rating_tv"
            tools:text="this move is great" />
        
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>